{{- $authorEmail := "" }}
{{- with site.Params.author }}
  {{- if reflect.IsMap . }}
    {{- with .email }}
      {{- $authorEmail = . }}
    {{- end }}
  {{- end }}
{{- end }}

{{- $authorName := "" }}
{{- with site.Params.author }}
  {{- if reflect.IsMap . }}
    {{- with .name }}
      {{- $authorName = . }}
    {{- end }}
  {{- else }}
    {{- $authorName  = . }}
  {{- end }}
{{- end }}

{{- $pctx := . }}
{{- if .IsHome }}{{ $pctx = .Site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
{{- $pages = $pctx.RegularPages }}
{{- else }}
{{- $pages = $pctx.Pages }}
{{- end }}
{{- $limit := .Site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
{{- $pages = $pages | first $limit }}
{{- end }}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ if eq .Title .Site.Title }}{{ .Site.Title | transform.XMLEscape | safeHTML }}{{ else }}{{ .Title | transform.XMLEscape | safeHTML }} on {{ .Site.Title | transform.XMLEscape | safeHTML }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>Recent content {{ if eq .Title .Site.Title }}on {{ .Site.Title | transform.XMLEscape | safeHTML }}{{ else }}in {{ .Title | transform.XMLEscape | safeHTML }} on {{ .Site.Title | transform.XMLEscape | safeHTML }}{{ end }}</description>
    <generator>Hugo</generator>
    <language>{{ site.Language.LanguageCode }}</language>{{ with $authorEmail }}
    <managingEditor>{{.}}{{ with $authorName }} ({{ . }}){{ end }}</managingEditor>{{ end }}{{ with $authorEmail }}
    <webMaster>{{ . }}{{ with $authorName }} ({{ . }}){{ end }}</webMaster>{{ end }}{{ with .Site.Copyright }}
    <copyright>{{ . }}</copyright>{{ end }}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    {{- range $pages }}
    <item>
      <title>{{ .Title | transform.XMLEscape | plainify }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .PublishDate.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{- with $authorEmail }}<author>{{ . }}{{ with $authorName }} ({{ . }}){{ end }}</author>{{ end }}
      <guid>{{ .Permalink }}</guid>
      <description>
        {{- printf "<![CDATA[" | safeHTML }}
          {{- $content := .RawContent }}
          {{- /* First normalize the more marker to handle any whitespace variations */ -}}
          {{- $normalizedContent := $content | replaceRE "<!--\\s*more\\s*-->" "<!--MOREMARKER-->" }}
          {{- $parts := split $normalizedContent "<!--MOREMARKER-->" }}
          {{- if gt (len $parts) 1 }}
            {{- $summary := index $parts 0 | markdownify | plainify }}
            {{- $summary = $summary | replaceRE "\\s+$" "" }}
            {{- printf "%s" $summary | safeHTML }}
            {{- if .Truncated }}{{- " " -}}{{- printf "[Read more](%s)" .Permalink | markdownify | safeHTML }}{{ end }}
          {{- else }}
            {{- .Summary | plainify | chomp | safeHTML }}
          {{- end }}
        {{- printf "]]>" | safeHTML }}
      </description>
    </item>
    {{- end }}
  </channel>
</rss>
